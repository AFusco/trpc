{
  "name": "@trpc/cli",
  "version": "0.0.0",
  "description": "CLI for adding tRPC to your current project",
  "repository": {
    "type": "git",
    "url": "https://github.com/trpc/trpc",
    "directory": "packages/cli"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "trpc-init": "./dist/index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "exec": "tsx ./src/index"
  },
  "dependencies": {
    "boxen": "^7.0.1",
    "chalk": "^5.2.0",
    "cli-highlight": "^2.1.11",
    "clipanion": "^3.2.0-rc.14",
    "diff": "^5.1.0",
    "find-up": "^6.3.0",
    "inquirer": "^9.1.4",
    "ts-morph": "^17.0.1"
  },
  "devDependencies": {
    "@types/diff": "^5.0.2",
    "@types/inquirer": "^9.0.3",
    "tsup": "^6.5.0",
    "type-fest": "^3.5.1",
    "typescript": "^4.8.4"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*"
        ],
        "rules": {
          "no-console": "off"
        }
      }
    ]
  }
}
